class Soda():
    def __init__(self, additive):
        self.additive = additive

    def show_my_drink(self):
        if self.additive != '':
            print(f"Газировка и {self.additive}")
        else:
            print("Обычная газировка")

test_1 = Soda("апельсин")
test_1.show_my_drink()

test_2 = Soda("")
test_2.show_my_drink()
